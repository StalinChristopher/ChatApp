<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.view_mage.ViewImageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_image_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/view_image_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="37dp"
            android:background="@null"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/view_image_imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintTop_toBottomOf="@id/view_image_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/whatsapp_user"
        android:scaleType="fitCenter"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/view_image_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/whatsapp_floating_button_color"
        android:src="@drawable/send_icon"
        app:tint="@color/whatsapp_floating_button_icon_color"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_image_imageView"
        app:layout_constraintEnd_toEndOf="@id/view_image_imageView"
        app:layout_constraintBottom_toBottomOf="@id/view_image_imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
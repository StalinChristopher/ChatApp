<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/splash_screen_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:alpha="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_screen_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_screen_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <ImageView
        android:id="@+id/splash_screen_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/splash_screen_guideline4"
        app:layout_constraintEnd_toStartOf="@+id/splash_screen_guideline2"
        app:layout_constraintStart_toStartOf="@+id/splash_screen_guideline1"
        app:layout_constraintTop_toTopOf="@+id/splash_screen_guideline3"
        app:srcCompat="@drawable/whatsapp_logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_screen_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.46" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_screen_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60072374" />

</androidx.constraintlayout.widget.ConstraintLayout>